{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "strict": true,
    "esModuleInterop": true,
    // @discordjs/voice uses CommonJS
    "paths": {
      "@files/*": [
        "../files/*"
      ],
      "@classes/*": [
        "classes/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@typings/*": [
        "typings/*"
      ],
      "@config": [
        "classes/config.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}